@model NGO.Models.admin
@{
    ViewBag.Title = "admin";
    Layout = "~/Views/Shared/Login_Layout.cshtml";

}
<div class="container" style="width:400px;">
  <br />
    @using (Html.BeginForm())
    {
        @Html.TextBoxFor(x => x.a_name, new { @class = "form-control", placeholder = "Enter Name" })
 
        @Html.PasswordFor(x => x.a_password, new { @class = "form-control", placeholder = "Enter Password" })

        <input style="margin-left:150px;" type="submit" value="login" name="login" class="btn btn-success" />

    }


    <br />
    <div class="form-group">

        <h3>@ViewBag.error</h3>
    </div>

</div>

